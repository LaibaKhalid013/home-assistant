{
  "config": {
    "step": {
      "user": {
        "data": {
          "api_token": "[%key:common::config_flow::data::api_token%]",
          "api_key": "[%key:common::config_flow::data::api_key%]"
        }
      }
    },
    "error": {
      "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
      "invalid_auth": "[%key:common::config_flow::error::invalid_auth%]",
      "unknown": "[%key:common::config_flow::error::unknown%]"
    },
    "abort": {
      "already_configured": "[%key:common::config_flow::abort::already_configured_device%]"
    }
  },
  "services": {
    "list_devices": {
      "name": "List devices",
      "description": "List all devices registered to the Switchbot account."
    },
    "send_command": {
      "name": "Send command",
      "description": "Send control command to device as specified in https://github.com/OpenWonderLabs/SwitchBotAPI?tab=readme-ov-file#send-device-control-commands",
      "fields": {
        "unique_id": {
          "name": "Id",
          "description": "Switchbot unique id."
        },
        "command_type": {
          "name": "Command type",
          "description": "Command type to set (usually \"command\")."
        },
        "command": {
          "name": "Command",
          "description": "Command to use."
        },
        "parameter": {
          "name": "Parameter",
          "description": "Command parameter to set (optional)."
        }
      }
    }
  }
}
